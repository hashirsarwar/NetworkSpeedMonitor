<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:textSize="14sp"
        android:textColor="#000"
        android:id="@+id/download"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_marginStart="15dp" />

    <TextView
        android:textSize="14sp"
        android:textColor="#000"
        android:id="@+id/dspeed"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/download" />

    <TextView
        android:textSize="14sp"
        android:textColor="#000"
        android:id="@+id/upload"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_toStartOf="@+id/uspeed" />

    <TextView
        android:textSize="14sp"
        android:textColor="#000"
        android:id="@+id/uspeed"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp" />
</RelativeLayout>